{
  "OpenClaw": {
    "BindAddress": "127.0.0.1",
    "Port": 18789,
    "AuthToken": null,
    "Llm": {
      "Provider": "openai",
      "Model": "gpt-4o",
      "ApiKey": null,
      "Endpoint": null,
      "MaxTokens": 4096,
      "Temperature": 0.7
    },
    "Memory": {
      "Provider": "file",
      "StoragePath": "./memory",
      "MaxHistoryTurns": 50,
      "MaxCachedSessions": null,
      "Sqlite": {
        "DbPath": "./memory/openclaw.db",
        "EnableFts": true,
        "EnableVectors": false
      },
      "Recall": {
        "Enabled": false,
        "MaxNotes": 8,
        "MaxChars": 8000
      }
    },
    "Security": {
      "AllowQueryStringToken": false,
      "AllowedOrigins": [],
      "TrustForwardedHeaders": false,
      "KnownProxies": [],
      "AllowUnsafeToolingOnPublicBind": false,
      "AllowPluginBridgeOnPublicBind": false,
      "AllowRawSecretRefsOnPublicBind": false
    },
    "WebSocket": {
      "MaxMessageBytes": 65536,
      "MaxConnections": 1000,
      "MaxConnectionsPerIp": 50,
      "MessagesPerMinutePerConnection": 120
    },
    "Tooling": {
      "AutonomyMode": "supervised",
      "WorkspaceRoot": "env:OPENCLAW_WORKSPACE",
      "WorkspaceOnly": false,
      "AllowedShellCommandGlobs": [ "*" ],
      "ForbiddenPathGlobs": [],
      "AllowShell": true,
      "AllowedReadRoots": [
        "*"
      ],
      "AllowedWriteRoots": [
        "*"
      ],
      "ToolApprovalTimeoutSeconds": 300
    },
    "Plugins": {
      "Enabled": true,
      "Prefer": "native",
      "Overrides": {},
      "Allow": [],
      "Deny": [],
      "Native": {
        "HomeAssistant": {
          "Enabled": false,
          "BaseUrl": "http://homeassistant.local:8123",
          "TokenRef": "env:HOME_ASSISTANT_TOKEN",
          "TimeoutSeconds": 15,
          "VerifyTls": true,
          "MaxOutputChars": 60000,
          "MaxEntities": 200,
          "Policy": {
            "AllowEntityIdGlobs": [ "*" ],
            "DenyEntityIdGlobs": [],
            "AllowServiceGlobs": [ "*" ],
            "DenyServiceGlobs": []
          },
          "Events": {
            "Enabled": false,
            "ChannelId": "homeassistant",
            "SessionId": "homeassistant:events",
            "SubscribeEventTypes": [ "state_changed" ],
            "EmitAllMatchingEvents": true,
            "GlobalCooldownSeconds": 2,
            "AllowEntityIdGlobs": [ "*" ],
            "DenyEntityIdGlobs": [],
            "PromptTemplate": "Home Assistant event: {event_type} entity={entity_id} from={from_state} to={to_state} (name={friendly_name})",
            "Rules": []
          }
        },
        "Mqtt": {
          "Enabled": false,
          "Host": "127.0.0.1",
          "Port": 1883,
          "UseTls": false,
          "UsernameRef": null,
          "PasswordRef": null,
          "ClientId": "openclaw",
          "TimeoutSeconds": 10,
          "MaxPayloadBytes": 262144,
          "Policy": {
            "AllowPublishTopicGlobs": [ "*" ],
            "DenyPublishTopicGlobs": [],
            "AllowSubscribeTopicGlobs": [ "*" ],
            "DenySubscribeTopicGlobs": []
          },
          "Events": {
            "Enabled": false,
            "ChannelId": "mqtt",
            "SessionId": "mqtt:events",
            "Subscriptions": []
          }
        }
      }
    },
    "Channels": {
      "AllowlistSemantics": "legacy",
      "Sms": {
        "Twilio": {
          "Enabled": false,
          "AccountSid": null,
          "AuthTokenRef": "env:TWILIO_AUTH_TOKEN",
          "MessagingServiceSid": null,
          "FromNumber": null,
          "WebhookPath": "/twilio/sms/inbound",
          "WebhookPublicBaseUrl": null,
          "ValidateSignature": true,
          "AllowedFromNumbers": [],
          "AllowedToNumbers": [],
          "MaxInboundChars": 2000,
          "RateLimitPerFromPerMinute": 30,
          "AutoReplyForBlocked": false,
          "HelpText": "OpenClaw: reply STOP to opt out."
        }
      },
      "Telegram": {
        "Enabled": false,
        "DmPolicy": "pairing",
        "BotToken": null,
        "BotTokenRef": "env:TELEGRAM_BOT_TOKEN",
        "WebhookPath": "/telegram/inbound",
        "WebhookPublicBaseUrl": null,
        "AllowedFromUserIds": [],
        "MaxInboundChars": 4096
      },
      "WhatsApp": {
        "Enabled": false,
        "Type": "official",
        "DmPolicy": "pairing",
        "WebhookPath": "/whatsapp/inbound",
        "WebhookVerifyToken": "openclaw-verify",
        "WebhookVerifyTokenRef": "env:WHATSAPP_VERIFY_TOKEN",
        "CloudApiToken": null,
        "CloudApiTokenRef": "env:WHATSAPP_CLOUD_API_TOKEN",
        "PhoneNumberId": null,
        "BridgeUrl": null,
        "BridgeTokenRef": "env:WHATSAPP_BRIDGE_TOKEN",
        "AllowedFromIds": []
      }
    },
    "MaxConcurrentSessions": 64,
    "SessionTimeoutMinutes": 30,
    "Cron": {
      "Enabled": false,
      "Jobs": [
        {
          "Name": "daily-news",
          "CronExpression": "0 9 * * *",
          "Prompt": "Summarize today's top AI + security news with links.",
          "RunOnStartup": false,
          "SessionId": "cron:daily-news",
          "ChannelId": "email",
          "RecipientId": "you@example.com",
          "Subject": "Daily news summary"
        }
      ]
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning"
    }
  }
}
